[core]
  editor = vim
  pager = "less -iSXFR"
[push]
  default = simple
[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  keepBackup = false
  prompt = false
[pager]
  status = true
[diff]
  noprefix = true
[color "interactive"]
  prompt = red reverse
[rebase]
  autosquash = true
[credential]
  helper = cache
[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
