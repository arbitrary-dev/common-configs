# Weather in Latvia
wlv() {
  local id="P28"
  local name="Rīga, Rīgas pilsēta"

  if [[ -n "$1" ]]; then
    local r=("${(@f)$(
      curl --get --data-urlencode "q=$1" -s https://videscentrs.lvgmc.lv/data/search \
      | jq -r 'map(select(.kategorija == "Prognozes"))|.[]|{id: .loc_params|fromjson|.punkts,name: .nosaukums}|@text "\(.id)\t\(.name)"'
    )}")
    if (( $#r > 1 )); then
      for l in "${r[@]}"; do echo $l; done
      echo
      read ans?"Which one? "
      IFS=$'\t' read id name <<< "${r[(r)$ans	*]}"
    else
      IFS=$'\t' read id name <<< "$r"
    fi
    if [[ -z "$id" ]]; then
      echo "Location not found!"
      return 1
    fi
  fi

  echo "$name"

  local hour_ago=`date +%Y%m%d%H00 -d '-1 hour'`
  curl -s https://videscentrs.lvgmc.lv/data/weather_forecast_for_location_hourly?punkts=$id \
  | jq -r \
  '
    def fmt_temp_with_padding:
      .temperatura | tonumber | round
      | (if fabs < 10 then " " else "" end) as $pad
      | tostring + "°"
      | if startswith("-") then . else "+" + . end
      | $pad + .;

    def fmt_wind_with_padding:
      (.veja_atrums|tonumber|round) as $a
      | (.brazmas|tonumber|round) as $b
      | @text "\($a)-\($b) m/s"
      | if $a < 10 then " " + . else . end
      | if $b < 10 then " " + . else . end;

    def fmt:
      {
        time: .laiks|strptime("%Y%m%d%H%M")|strftime("%H:%M"),
        temp: fmt_temp_with_padding,
        rh: @text "RH \(.relativais_mitrums|tonumber|round)%",
        wind: fmt_wind_with_padding,
        uv: (
          if .uvi_indekss and (.uvi_indekss|tonumber|round) > 0
          then @text "  UV\(.uvi_indekss|tonumber|round)"
          else "" end
        ),
        prec: (
          if .nokrisni_1h|tonumber > 0
          then @text "  \(.nokrisni_1h) mm"
          else "" end
        ),
      }
      | @text "\(.time)  \(.temp) \(.wind)  \(.rh)\(.uv)\(.prec)";

    map(select(.laiks|tonumber >= '$hour_ago'))
    | group_by(.laiks|strptime("%Y%m%d%H%M")|strftime("%Y-%m-%d"))[]
    | {(.[0].laiks|strptime("%Y%m%d%H%M")|strftime("%Y-%m-%d")): [.[] | fmt]}
    | to_entries[0]
    | @text "\n\(.key)\n\n\(.value|join("\n"))"
  ' \
  | less
}

weather() {
  local data="{
    time: (.time | tonumber / 100),
    chanceofrain,
    humidity,
    precipMM,
    tempC,
    uvIndex,
    wind: (.winddir16Point + \", \" + .windspeedKmph + \" Kmph\"),
    desc: (.weatherDesc | map(.value) | join(\"; \"))
  }"
  curl -s wttr.in?format=j1 \
  | jq "[
    (.current_condition[0] |{
      localObsDateTime,
      humidity,
      precipMM,
      temp_C,
      uvIndex,
      wind: (.winddir16Point + \", \" + .windspeedKmph + \" Kmph\"),
      desc: (.weatherDesc | map(.value) | join(\"; \"))
    }),
    (.weather[0] | {
      date: .date,
      hourly: .hourly
        | map(select((.time | tonumber / 100) >= (`date +%_H` / 3 | floor) * 3 ))
        | map($data)
    }),
    (.weather[1] | {
      date: .date,
      hourly: .hourly | map($data)
    })
  ]"
}

# BT volume
btv() {
  # TODO use udev rule unstead
  if amixer -D bluealsa >/dev/null; then
    local ctl=`amixer -D bluealsa scontrols | grep -i a2dp | cut -d\' -f2`
    local val=${1:-75%}
    echo "amixer -D bluealsa sset '$ctl' $val"
    amixer -D bluealsa set $ctl $val > /dev/null
  fi
}

# BT charge
btc() {
  local ctl=`amixer -D bluealsa scontrols | grep -oiE "'.*battery.*'"`
  [ -z "$ctl" ] && echo 'No BT battery controls available!' && return 1
  echo "amixer -D bluealsa sget $ctl"
  amixer -D bluealsa sget $ctl | grep -oE [0-9]+%
}

nc() {
  if rc-service mpd-remote status >/dev/null; then
    sudo rc-service mpd-remote stop || return 1
  fi
  if ! rc-service mpd status >/dev/null; then
    sudo rc-service mpd start || return 1
  fi
  ncmpcpp
}

ncr() {
  if ! mount | grep -q "/mnt/music"; then
    mkdir -p /mnt/music
    curlftpfs ftp://192.168.1.1/music /mnt/music -o utf8 || return 1
  fi

  # Keep the FTP connection alive...
  if mount | grep -qE '^curlftpfs.+ on /mnt/music '; then
    _keep_alive() {
      while true; do
        touch /mnt/music/_playlists
        sleep 61
      done
    }
    printf "Starting the keep alive workaround... "
    _keep_alive &
  fi

  if rc-service mpd status >/dev/null; then
    sudo rc-service mpd stop || return 1
  fi

  if ! rc-service mpd-remote status >/dev/null; then
    sudo rc-service mpd-remote start || return 1
  fi

  if ! pgrep mpd-mpris >/dev/null; then
    mpd-mpris &>/dev/null &
    disown
  fi

  ncmpcpp -c ~/.config/ncmpcpp/config-remote

  # Stop the keep alive workaround.
  kill % 2>/dev/null
}

# Workaround for HDD sleep issue
ncrr() {
  sudo rc-service mpd-remote stop
  pkill -9 curlftpfs
  umount /mnt/music
  ncr
}

