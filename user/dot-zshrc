# YouTube watch
ytw() {
  local format="worstvideo[height>=240]+worstaudio/worst[height>=240]/hls-655/0"

  local flags=()
  while true; do
    case $1 in
      -f) format="$2"
          shift 2 ;;
      -p) flags+=(--ytdl-raw-options=proxy=["$2"])
          shift 2 ;;
      -*) flags+=($1)
          shift ;;
      *)  break ;;
    esac
  done

  if (( ! $# )); then
    if [ -z "$YTW_COOKIES" ]; then
      echo "Please set YTW_COOKIES!"
      return 1
    fi
    local c="/tmp/.ytw-cookies"
    if [ ! -f "$c" ]; then
      echo $YTW_COOKIES | basenc --decode --base64 | gunzip > "$c"
    fi
    set -A argv --ytdl-raw-options=yes-playlist=,cookies="$c" \
                https://youtube.com/playlist?list=WL
  fi
  if command -v gnome-session-inhibit &>/dev/null; then
    # Temporary prevents going to sleep on PinePhone
    gnome-session-inhibit --inhibit idle:suspend \
      mpv --ytdl-format="$format" "${=flags[@]}" "${=@}"
  else
    mpv --ytdl-format="$format" ${=flags[@]} "$@"
  fi
}
# YouTube music
ytm() {
  if [[ -z "$@" && -z "$YTM_DEF_PLAYLIST" ]]; then
    echo "No YTM_DEF_PLAYLIST specified!"
    return 1
  fi

  local format="bestaudio/best"
  while true; do
    case "$1" in
      w)  local format="worstaudio/worst" ;;
      bc) local bigcache ;;
      ns) local no_shuffle ;;
      *)  break ;;
    esac
    shift
  done

  mpv --no-video \
      --ytdl-format=$format${bigcache-[filesize<14M]} \
      ${bigcache---demuxer-max-bytes=5MiB} \
      ${bigcache+--demuxer-max-bytes=150MiB} \
      ${=@:-${no_shuffle---shuffle} $YTM_DEF_PLAYLIST}
}

mus() {
  local D=${MUS:-~/Music}

  while true; do
    case "$1" in
      s) local SHUFFLE ;;
      l) local LOOP ;;
      ls) local LIST ;;
      *) break ;;
    esac
    shift
  done

  if (( ! $# )); then
    ls "$D"
    return
  fi

  # Case-sensitive search
  [[ "$@" =~ [A-Z] ]] && local CS

  # Search for directories first
  local FS=(${(@f)"$(find "$D"/ -type d -${CS-i}name "*${*}*")"})
  # ...then file names
  (( ! $#FS )) && FS=(${(@f)"$(find "$D"/ -type f -${CS-i}name "*${*}*")"})
  # ...then path names
  (( ! $#FS )) && FS=(${(@f)"$(find "$D"/ -type f -${CS-i}path "*${*}*")"})

  if (( $#FS > 1 )); then
    for F in $FS; do echo ${F#"$D"/}; done
    echo
    vared -p "Which one? " -c FILE
    echo
    # Recurse!
    mus "$FILE"
    return $?
  elif (( ! $#FS )); then
    echo "No matches found!"
    return 1
  fi

  local FILE="${FS[1]}"
  if [[ -v LIST ]]; then
    [[ -d "$FILE" ]] && echo "$FILE"
    ls "$FILE"
  else
    echo "$FILE"
    mpv ${SHUFFLE+--shuffle} ${LOOP+--loop-playlist} "$FILE"
  fi
}

# Download YT video using free proxies
ytp() {
  local proxies=("${(@f)$(
    curl -s https://raw.githubusercontent.com/clarketm/proxy-list/master/proxy-list.txt \
    | grep -E "[0-9]+\.[0-9]+\.[0-9]+\.[0-9]+" \
    | sed -E -e 's/([^ ]+) (..)-.*(S?) ([-+]).*/\2 \3\1 \4/' -e 's_ S_ https://_'
  )}")

  while true; do
    local p=("${(ps: :)proxies[`shuf -i1-${#proxies} -n1`]}")
    echo -n "\nTrying with ${p[@]}\n"
    #mpv --ytdl-format="[height<=360]" --ytdl-raw-options=proxy="$p" $1 \
    #yt -f 243+249 --proxy "$p" https://www.youtube.com/watch?v=$1 \
    ytf --proxy "${p[2]}" "$@" \
    && break
  done
}

